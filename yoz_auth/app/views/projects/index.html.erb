<h1>Projects</h1>


<ul>
	<% @projects.each do |project| %>
    <li><%= link_to project.title, project_path(project.id) %>
    	<%= link_to "タスク変更", edit_project_path(project.id) %>
    	<%= link_to "消去", project_path(project.id), method: :delete, data: {confirm: "本当に削除してもよろしいでしょうか"} %>
	</li>
	<li><%= @twitters %>
		
	</li>
    <% end %>
</ul>

<p><%= link_to "タスクを追加する", new_project_path %> </p>